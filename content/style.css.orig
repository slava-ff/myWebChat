* {
    margin: 0;
    border: 0;
    padding: 0;
    box-sizing: border-box;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    /*user-select: none;*/
    /*-moz-user-select: none;*/
    /*-webkit-user-select: none;*/
}
html, body {
    background-color: chocolate;
}

#divLogReg {
    position: absolute;
    left: 40%;
    top: 30%;
}

#divChat {
    display: none;
}
#divChat.active {
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    position: absolute;
    display: flex;
    flex-flow: row nowrap;
}
#divMain {
    flex: 1 1 auto;
    display: flex;
    flex-flow: column;
}
#divText {
    flex: 1 1 auto;
    overflow: auto;
    width: 100%;
    color: white;
    background-color: rgb(43,43,43);
    padding: 1.5%;
}
#divInput {
    flex: 0 0 auto;
    display: flex;
    flex-flow: row nowrap;
}
#myText {
    flex: 1 1 auto;
    padding: 1%;
    font-size: 16px;
}
#btnSubmit {  /*rename it vesde btnSubmit*/
    flex: 0 0 auto;
    width: 10%;
    min-width: 80px;
}

#divSide {
    flex: 0 0 auto;
    width: 21%;
    padding: 4px;
    background: #aaa;
}
#divList {
    flex: 1 1 auto;
    overflow: auto;
    background: #bbb;
}
.divUser {
    font-size: small;
}
.divUser.online {
    color: darkgreen;
}
.divUser.offline {
    color: darkred;
}
#txtName {
    width: 100%;
    background-color: aliceblue;
}
#txtName:focus {
    background-color: white;
}

span {
    font-size: 20px;
    font-style: bold;
    color: yellow;
}
